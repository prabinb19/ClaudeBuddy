# ClaudeBuddy Environment Configuration
# Copy this file to .env and fill in your API keys

# ===========================================
# REQUIRED: API Keys for Supervisor Agent
# ===========================================

# Anthropic API Key (for Claude)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Tavily API Key (for web research)
# Get yours at: https://tavily.com/
TAVILY_API_KEY=tvly-your-key-here

# ===========================================
# OPTIONAL: Server Configuration
# ===========================================

# Server port (default: 3456)
PORT=3456

# Server host (default: 0.0.0.0)
HOST=0.0.0.0

# Debug mode (default: false)
DEBUG=false

# ===========================================
# OPTIONAL: Supervisor Agent Settings
# ===========================================

# Maximum number of searches per research task (default: 10)
MAX_SEARCHES=10

# Default Claude model for the supervisor (default: claude-sonnet-4-20250514)
DEFAULT_MODEL=claude-sonnet-4-20250514

# ===========================================
# OPTIONAL: Claude Data Directory
# ===========================================

# Path to Claude Code data directory (auto-detected if not set)
# CLAUDE_DATA_DIR=~/.claude

# ===========================================
# OPTIONAL: Cache Settings (in seconds)
# ===========================================

# MCP servers cache TTL (default: 1800 = 30 minutes)
MCP_CACHE_TTL=1800

# Insights cache TTL (default: 300 = 5 minutes)
INSIGHTS_CACHE_TTL=300

# Productivity cache TTL (default: 300 = 5 minutes)
PRODUCTIVITY_CACHE_TTL=300

# Agents cache TTL (default: 1800 = 30 minutes)
AGENTS_CACHE_TTL=1800
